<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="false"
    android:layout_alignParentTop="false"
    tools:layout_editor_absoluteX="8dp">

    <TextView
        android:id="@+id/whoseTurn"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:paddingLeft="7dp"
        android:paddingRight="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/stockView"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="81dp"
        android:layout_marginStart="81dp"
        android:layout_toEndOf="@+id/whoseTurn"
        android:layout_toRightOf="@+id/whoseTurn"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/layoutView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/whoseTurn"
        android:layout_weight="1"
        android:fontFamily="monospace"
        android:lines="3"
        android:paddingLeft="7dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <Button
        android:id="@+id/hintButton"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/stockView"
        android:onClick="hintClick"
        android:text="Hint"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="30sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layoutView"
        android:paddingLeft="7dp"
        android:text="Button"
        android:onClick="button1Click"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutView"
        android:layout_toRightOf="@+id/button1"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignTop="@+id/button2"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_toRightOf="@+id/button2"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button4"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button5"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/button5"
        android:layout_toRightOf="@+id/button5"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button6"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/button6"
        android:layout_toRightOf="@+id/button6"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button7"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@+id/button7"
        android:layout_toRightOf="@+id/button7"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button8"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/button8"
        android:layout_toRightOf="@+id/button8"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button9"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/button9"
        android:layout_toRightOf="@+id/button9"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button1"
        android:layout_marginTop="30dp"
        android:paddingLeft="7dp"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_alignTop="@+id/button11"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="invisible"
        android:layout_above="@+id/userMessage"
        android:layout_toRightOf="@+id/button12"
        android:layout_toEndOf="@+id/button12" />

    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button13"
        android:layout_toEndOf="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button14"
        android:layout_toLeftOf="@+id/button6"
        android:layout_toStartOf="@+id/button6"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button15"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button7"
        android:layout_alignStart="@+id/button7"
        android:layout_alignTop="@+id/button16"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button17"
        android:layout_toLeftOf="@+id/button9"
        android:layout_toRightOf="@+id/button17"
        android:layout_toStartOf="@+id/button9"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button18"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="invisible" />

    <Button
        android:id="@+id/button20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button19"
        android:layout_alignBottom="@+id/button19"
        android:layout_alignLeft="@+id/button10"
        android:layout_alignStart="@+id/button10"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/userMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button11"
        android:layout_centerVertical="true"
        android:lines="5"
        android:paddingBottom="20dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <Button
        android:id="@+id/noButton"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/yesButton"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_toEndOf="@+id/yesButton"
        android:layout_toLeftOf="@+id/yesButton"
        android:onClick="noClick"
        android:paddingLeft="7dp"
        android:text="No"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="30sp"
        android:visibility="invisible"
        android:layout_alignTop="@+id/yesButton" />

    <Button
        android:id="@+id/yesButton"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/userMessage"
        android:layout_marginTop="30dp"
        android:onClick="yesClick"
        android:paddingRight="7dp"
        android:text="Yes"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="30sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/leftButton"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:onClick="leftClick"
        android:paddingLeft="5dp"
        android:text="L"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="30sp"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/noButton"
        android:layout_alignBottom="@+id/noButton"
        android:layout_alignLeft="@+id/button15"
        android:layout_alignStart="@+id/button15" />

    <Button
        android:id="@+id/rightButton"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/leftButton"
        android:layout_toEndOf="@+id/leftButton"
        android:layout_toRightOf="@+id/leftButton"
        android:includeFontPadding="true"
        android:onClick="rightClick"
        android:paddingLeft="10dp"
        android:text="R"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="30sp"
        android:visibility="invisible"
        android:layout_alignTop="@+id/leftButton" />

    <Button
        android:id="@+id/okButton"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_alignBaseline="@+id/rightButton"
        android:layout_alignBottom="@+id/rightButton"
        android:layout_alignLeft="@+id/button19"
        android:layout_alignStart="@+id/button19"
        android:layout_toRightOf="@+id/rightButton"
        android:onClick="okClick"
        android:text="Ok"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="30sp"
        android:visibility="invisible" />

</RelativeLayout>
