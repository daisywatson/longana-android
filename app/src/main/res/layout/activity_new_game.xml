<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.longana.NewGameActivity">

    <Button
        android:id="@+id/button600"
        android:layout_width="162dp"
        android:layout_height="148dp"
        android:layout_column="2"
        android:layout_row="1"
        android:onClick="set600"
        android:text="600"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button200"
        android:layout_width="162dp"
        android:layout_height="148dp"
        android:layout_column="0"
        android:layout_row="1"
        android:onClick="set200"
        android:text="200"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tourneyScoreText"
        android:layout_width="414dp"
        android:layout_height="66dp"
        android:layout_column="1"
        android:layout_row="0"
        android:text="Pick a tournament score:"
        android:textSize="36sp" />

    <Button
        android:id="@+id/button400"
        android:layout_width="162dp"
        android:layout_height="148dp"
        android:layout_column="1"
        android:layout_row="1"
        android:onClick="set400"
        android:text="400"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button800"
        android:layout_width="162dp"
        android:layout_height="148dp"
        android:layout_column="3"
        android:layout_row="1"
        android:onClick="set800"
        android:text="800"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textMessage"
        android:layout_width="676dp"
        android:layout_height="208dp"
        android:layout_column="1"
        android:layout_row="2"
        android:lines="5"
        android:textSize="30sp" />

    <Button
        android:id="@+id/yesButton"
        android:layout_width="162dp"
        android:layout_height="148dp"
        android:layout_column="0"
        android:layout_row="3"
        android:onClick="yesClick"
        android:text="Yes"
        android:textSize="30sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/noButton"
        android:layout_width="162dp"
        android:layout_height="148dp"
        android:layout_column="1"
        android:layout_row="3"
        android:onClick="noClick"
        android:text="No"
        android:textSize="30sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/okButton"
        android:layout_width="162dp"
        android:layout_height="148dp"
        android:layout_column="2"
        android:layout_row="3"
        android:onClick="okClick"
        android:text="Ok"
        android:textSize="30sp"
        android:visibility="invisible" />

</GridLayout>
